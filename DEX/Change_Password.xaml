<Window x:Name="change_password" x:Class="DEX.Change_Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DEX - Change Password" Height="155" Width="300" Icon="dictionar-icon.ico" ResizeMode="NoResize" MinWidth="300" MinHeight="155">
    <Grid>
        <Button x:Name="OK" Content="OK" HorizontalAlignment="Left" Margin="50,91,0,0" VerticalAlignment="Top" Width="75" Click="OK_Click"/>
        <Button x:Name="Cancel" Content="Cancel" Margin="0,91,50,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75" Click="Cancel_Click"/>
        <TextBlock Margin="50,10,50,0" TextWrapping="Wrap" Text="Schimbare parola user" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <TextBox x:Name="new_password" Height="23" Margin="50,57,50,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="user_password_change" Height="23" Margin="50,29,50,0" TextWrapping="Wrap" VerticalAlignment="Top" CharacterCasing="Upper" FontWeight="Bold" Text="user" HorizontalAlignment="Center" IsReadOnly="True" Width="194" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
